{
  "manifest_version": 3,
  "name": "FindYourTab",
  "version": "1.0",
  "description": "Quickly find and switch between browser tabs",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "32": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    },
    "default_title": "FindYourTab"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "<all_urls>",
    "ws://localhost:*/"
  ],
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}